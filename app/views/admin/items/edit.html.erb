<h1>Admin::Items#edit</h1>
<p>Find me in app/views/admin/items/edit.html.erb</p>

<div class="row justify-content-center">
<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
  <div class="form-group">
    <label class="form-label">商品画像</label>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <label class="form-label">商品名</label>
    <%= f.text_field :name, class: "form-control", autofocus: true, id:"inputname", placeholder:"商品名"%>
  </div>

  <div class="form-group">
    <label class="form-label">商品説明</label>
    <%= f.text_area :introduction, class: "form-control", autofocus: true, id:"inputintroduction", placeholder:"商品説明"%>
  </div>

  <div class="form-group">
    <label class="form-label">税抜価格</label>
    <%= f.text_field :price, class: "form-control", autofocus: true, id:"inputprice", placeholder:"税抜価格"%>
  </div>
</div>
<div class="row justify-content-center">
  <%= f.submit "変更を保存", class:"btn btn-sm btn-success" %>
</div>
<% end %>