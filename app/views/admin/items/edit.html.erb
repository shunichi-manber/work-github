<h1>Admin::Items#edit</h1>
<p>Find me in app/views/admin/items/edit.html.erb</p>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
        <div class="form-group">
          <label for="inputImage">商品画像</label>
            <%= f.file_field :image, accept: "image/*" %>

          <label for="inputname">商品名</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputname", placeholder:"商品名"%>
        </div>

        <div class="form-group">
          <label for="inputintroduction">商品説明</label><br>
          <%= f.text_area :introduction, autofocus: true, id:"inputintroduction", placeholder:"商品説明"%>
        </div>

        <label for="inputprice">税抜価格</label><br>
          <%= f.text_field :price, autofocus: true, id:"inputprice", placeholder:"税抜価格"%>
        </div>

        <div class="form-group">
          <%= f.submit "変更を保存" %>
        </div>
      <% end %>
    </div>