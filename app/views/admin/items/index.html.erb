<h1>Admin::Items#index</h1>
<p>Find me in app/views/admin/items/index.html.erb</p>

<div>
  <h3>商品一覧</h3>
  <div><%= link_to new_admin_item_path do %>
    <i class="fa-solid fa-circle-plus" style="color: #221f51;"></i>
    <% end %>
  </div>
<table class="table">
  <thead>
       <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>
</div>
