<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<h4 class-"ml-auto">会員の方はこちらからログイン</h4>

  <div class="row mb-4">
    <div class="col-md-2"><%= f.label :'メールアドレス' %></div>
    <div class="col-md-10"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="row mb-4">
    <div class="col-md-2"><%= f.label :'パスワード' %></div>
    <div class="col-md-10"><%= f.password_field :password, autocomplete: "current-password" %></div
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions　mt-auto　pb-4">
    <%= f.submit "ログイン", class:'btn btn-lg btn-primary' %>
  </div>
<% end %>

<%= render "public/shared/links" %>
