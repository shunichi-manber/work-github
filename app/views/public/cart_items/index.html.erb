<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>
<div class="row">
  <p class="col text-left">ショッピングカート</p>
  <p class="col text-right text-white btn-sm btn-danger"><%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete %></p>
</div>

  <% if @cart_item == current_customer %>
  <table class="table">
    <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </thead>
    <tbody>
      <% @sum = 0 %>
      <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.get_image %>
        <%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
      <td><%= f.select :amount, *[1..10] %>
          <%= f.submit '変更', class: 'btn btn-sm btn-success' %>
      </td>
        <% end %>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete %></td>
      </tr>
      <% @sum += cart_item.subtotal %>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="col mr-auto"><%= link_to '買い物を続ける', items_path %></div>
    <div class="col ml-auto">合計金額 <%= @sum %></div>
  </div>

  <div class="row justify-content-center">
    <%= link_to '注文情報入力に進む', new_order_path, class:'btn btn-sm btn-success' %>
  </div>
  <% end %>