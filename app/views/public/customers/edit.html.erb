<h3>costomers/edit</h3>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <p>会員情報編集</p>
      <% if @customer.errors.any? %>
          <%= @customer.errors.count %>件のエラーが発生しました
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @customer, url: 'update_path', method: :patch do |f| %>
        <div class="form-group">
          <label for="inputName">氏名</label>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </div>
        <div class="form-group">
          <label for="inputName">フリガナ</label>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>
        <div class="form-group">
          <label for="inputName">郵便番号</label>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group">
          <label for="inputName">住所</label>
          <%= f.text_field :address %>
        </div>
        <div class="form-group">
          <label for="inputName">電話番号</label>
          <%= f.text_field :telephone_number %>
        </div>
        <div class="form-group">
          <label for="inputName">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div>
          <%= f.submit "編集内容を保存" %>
        </div>
        <div>
          <%= link_to '退会する', check_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>